{
  "manifest_version": 3,
  "name": "Twitter/X Growth Bot",
  "version": "1.0",
  "description": "Automate Twitter interactions with AI.",
  "permissions": ["storage", "activeTab", "identity", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "icon": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://twitter.com/*"
  ]
}
